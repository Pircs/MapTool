	"WhenLifeLow": {
		"ShowName": "血量低时",
		"Help": "",
		"Items": [{
				"Name": "KeepRadiusWhenLifeLow",
				"Help": "如果大于0，表示当NPC的血量比例小于等于LifeLowPercent时，会保持离攻击目标该距离，默认0。比如设置为10，则当血量低时，会保持离攻击目标10的距离。",
				"Type": "UInt",
				"Default": 0
			},
			{
				"Name": "MagicToUseWhenLifeLow",
				"Help": "设置当NPC的血量比例小于等于LifeLowPercent时，使用该武功。武功的等级由AttackLevel决定。",
				"Type" : "FileName",
                "StartPath" : "ini\\magic",
                "FileNameFilter" : "ini文件(*.ini)|*.ini",
				"Default": ""
			}, {
				"Name": "LifeLowPercent",
				"Help": "血量百分比，范围0-100，默认20",
				"Type": "UIntRange",
				"Range": [0, 100],
				"Default": 20
			}
		]
	},
	"BeAttacked": {
		"ShowName": "被攻击时",
		"Help": "",
		"Items": [{
				"Name": "MagicToUseWhenBeAttacked",
				"Help": "当NPC的被攻击时，会释放该武功。释放的方向由MagicDirectionWhenBeAttacked决定。武功的等级由AttackLevel决定。",
				"Type" : "FileName",
                "StartPath" : "ini\\magic",
                "FileNameFilter" : "ini文件(*.ini)|*.ini",
				"Default": ""
			},
			{
				"Name": "MagicDirectionWhenBeAttacked",
				"Help": "武功释放方向",
				"Type": "UIntEnum",
				"Enums": [
					["攻击者的位置", 0],
					["被攻击到的武功的反方向", 1],
					["该NPC的当前朝向", 2]
				],
				"Default": 0
			}
		]
	},
    "WhenDeath": {
        "ShowName": "死亡时",
        "Help": "",
        "Items": [{
                "Name": "MagicToUseWhenDeath",
				"Help": "当NPC死亡时，会释放该武功。释放的方向由MagicDirectionWhenDeath决定。武功的等级由AttackLevel决定。",
				"Type" : "FileName",
                "StartPath" : "ini\\magic",
                "FileNameFilter" : "ini文件(*.ini)|*.ini",
				"Default": ""
            },
            {
				"Name": "MagicDirectionWhenDeath",
				"Help": "武功释放方向；如果武功是固定类的，不飞行的，或者没有攻击者，比如陷阱致死的，则释放的方向为该NPC的当前朝向。",
				"Type": "UIntEnum",
				"Enums": [
					["最后攻击该NPC的攻击者位置", 0],
					["最后攻击该NPC的武功的反方向", 1],
					["该NPC的当前朝向", 2]
				],
				"Default": 0
			}
        ]
    },
    "WhenFriendDeath": {
        "ShowName": "同伴死亡时",
        "Help": "",
        "Items": [{
                "Name": "KeepRadiusWhenFriendDeath",
				"Help": "默认0。对敌人和友方有效，对跟随类无效（因为要跟着主角）；如果大于零，如果在VisionRadius内有其同伴死亡，则会与最后一次攻击那个死亡的同伴人保持该设置值的距离。",
				"Type": "UInt",
				"Default": 0
            }
        ]
    },
